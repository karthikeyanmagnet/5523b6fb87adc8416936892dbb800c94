
<% include ../header %>    

<style>   

.shop-tabheader-font{font-size:18px !important}
</style>

<body>

    <div id="wrapper">

        <!-- Navigation -->
<% include ../menu %>            
        

        <div id="page-wrapper">

            <div class="container-fluid">

                
                
                 <div class="row top-heading">
                    <div class="col-lg-12">
                        <h3 class="page-header">
                            PRODUCTS  <small> Statistics Overview </small>
                        </h3>                      
 <hr>
                        <ol class="breadcrumb user-tab">
                            <li <% if(type==1) { %>  class="active shop-tabheader-font" <% } %> class="shop-tabheader-font" >
                                <a href="/admin/products?type=1">
                                PACKAGE
                                </a>
                            </li>
                            
                            <li <% if(type==2) { %>  class="active shop-tabheader-font" <% } %> class="shop-tabheader-font"  >
                                <a href="/admin/products?type=2">
                              ECOMMERCE 
                                </a>
                            </li>
                            <li <% if(type==3) { %>  class="active shop-tabheader-font" <% } %> class="shop-tabheader-font" >
                                <a href="/admin/products?type=3">
                               TOKEN
                                </a>
                            </li>
                        </ol>

                    </div>



                </div>
              

                <div class="row">
                    <br>
                    <div class="col-lg-12">
                        <a href="/admin/products/create"> <span class="btn-info btn pull-right"> Create </span> </a>
                        
                    </div>
                    <div class="col-lg-12">
                        <br>
                        
                    </div>
                     <div class="col-lg-12 panel">
                    
                    <br> 
                    
                     <div class="table-responsive  panel">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>S.No</th>
                                        <th>Product Name</th>
                                        <th>Product Type </th>
                                        <th>Product Price </th>
                                        <th> Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%
                                      if(code==200) {
                                    for( var i in data.productdetails ) { %>
                                    <tr>
                                        <td> <%- i %> </td>
                                        <td><%- data.productdetails[i].product_title %></td>
                                        <% if(data.productdetails[i].product_type==0) {  %>
                                        <td> ecommerce  </td>
                                        <% } %>
                                        <% if(data.productdetails[i].product_type==1) {  %>
                                        <td> package  </td>
                                        <% } %>
                                        <% if(data.productdetails[i].product_type==2) {  %>
                                        <td> token  </td>
                                        <% } %>
                                        
                                        <td> $ <%- data.productdetails[i].product_price_detail.product_price %> </td>
                                        <td> <a href="/admin/products/update/<%- data.productdetails[i]._id %>">  View / Edit </a> 
                                            /<a href="/admin/products/delete/<%- data.productdetails[i]._id %>"> Delete </a> </td>
                                    </tr>
                               <% } } else { %>
                          <tr>
                          <td>     No Products  </td>
                          
                               </tr>
                          
                          <% } %>
                                    
                                </tbody>
                            </table>
                        </div>
                    
                     </div>
                </div>
                <!-- /.row -->

               
                <!-- /.row -->

                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

   <% include ../footer %> 

</body>

</html>

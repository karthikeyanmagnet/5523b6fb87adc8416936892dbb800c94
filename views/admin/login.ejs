        <script>

            tjq(document).ready(function () {
                //  tjq("body").on("click","#adminLogin",function(){

                tjq(".login-form").validate({
                    rules: {
                        adminUsername: {
                            required: true,
                        },
                        adminPassword: {
                            required: true,
                        }
                    },
                    submitHandler: function () {
                        var userName = tjq("input[name='adminUsername']").val();
                        var passsword = tjq("input[name='adminPassword']").val();

                        if (userName == '' && passsword == '') {
                            tjq("#errMsg").text("Feilds are Empty");
                        }

                        var jsondata = {
                            "email": userName,
                            "password": passsword
                        };

                        tjq.ajax({
                            type: 'post',
                            url: '/admin/adminlogin',
                            datatype: 'json',
                            data: jsondata,

                            success: function (data) {
                                if (data.code == 200) {
                                    window.location.assign("admin/dashboard");
                                } else if (data.code == 400) {
                                    tjq("#errMsg").text(data.message);
                                }
                                //                     for Empty karthi
                                //                        else if (data.code == 204) {
                                //                            tjq("#errMsg").text(data.message);
                                //                        }
                            }

                        });
                    }
                })



                //});        
            });

        </script>





<% include header %>    

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">


<body>

    <div id="wrapper">

        <!-- Navigation -->
        <% include menu %>            


        <div id="page-wrapper">

            <div class="container-fluid">

               
                
                   <div class="row top-heading">
                    <div class="col-lg-12">
                        <h3 class="page-header">
                            PROFILE  <small>  </small>
                        </h3>


                     <!--   <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-dashboard"></i> Profile
                            </li>
                        </ol> -->

                    </div>



                </div>

                <br>  

                <div class="row panel"> 
                    <br>
                    
                       <% if(ch==1) { %>
                    <div class="col-lg-12">
                    <div class="alert alert-success alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <i class="fa fa-info-circle"></i>  <strong>Update Successfully</strong> 
                        </div>
                    </div>
                    <% } %>
                    
                    <form action="/users/editProfile" id="profile" method="post" enctype="multipart/form-data" >
                        
                        <input type="hidden" name="id" class="form-control" value="<%- data[0]._id %>" />
                        <div class="col-lg-12">
                            <a href="/users/editProfile">   <button class="btn btn-info pull-right" type="submit"> Save </button> </a>

                        </div>

                        <div class="col-lg-12">
                            
                             <h3> Personal Details </h3>
                            <table class="table table-bordered table-hover table-striped">

                                <tbody>

                                    <tr>
                                        <td style="width: 25%;"> First Name </td>

                                        <td>  <input type="text" name="first_name" class="form-control" value="<%- data[0].first_name %>" /> </td>

                                    </tr>

                                    <tr>
                                        <td style="width: 25%;"> Last Name </td>

                                        <td>  <input type="text" name="last_name" class="form-control" value="<%- data[0].last_name %>" /> </td>

                                    </tr>
                                    <tr>
                                        <td style="width: 25%;"> Email </td>

                                        <td>  <input type="text" name="email" class="form-control" disabled="" value="<%- data[0].email %>" /> </td>
                                    </tr>

                                    <tr>
                                        <td style="width: 25%;"> Mobile </td>

                                        <td>  <input type="text" name="mobilenumber" class="form-control" value="<%- data[0].mobilenumber %>" /> </td>

                                    </tr>


                                    <tr>
                                        <td style="width: 25%;">Country </td>

                                        <td>  <input type="text" name="country" class="form-control" value="<%- data[0].country %>" /> </td>

                                    </tr>
                                    <tr>
                                        <td style="width: 25%;">City </td>

                                        <td>  <input type="text" name="city" class="form-control" value="<%- data[0].city %>" /> </td>

                                    </tr>
                                    <tr>
                                        <td style="width: 25%;">Pincode </td>


                                        <td>  <input type="text" name="pincode" class="form-control" value="<%- data[0].pincode %>" /> </td>

                                    </tr>


                                </tbody>
                            </table>


                            <h3> Id Proof Details </h3>


                            <table class="table table-bordered table-hover table-striped">

                                <tbody>

                                    <tr>
                                        <td style="width: 25%;">Id Proof Expirydate </td>

                                        <td>  <input type="text" name="idproof_expirydate" class="form-control" id="idproof_expirydate" value="<%- data[0].idproof_expirydate %>" /> </td>

                                    </tr>
                                    <tr>
                                        <td style="width: 25%;"> Id Proof Number </td>

                                        <td>  <input type="text" name="idproof_number" class="form-control" value="<%- data[0].idproof_number %>" /> </td>

                                    </tr>



                                </tbody>
                            </table>

                            <h3> Bank Details </h3>


                            <table class="table table-bordered table-hover table-striped">

                                <tbody>

                                    <tr>
                                        <td style="width: 25%;">Account Holder Name </td>

                                        <td>  <input type="text" name="bankaccount_holdername" class="form-control"  value="<%- data[0].bankaccount_holdername %>" /> </td>

                                    </tr>
                                    <tr>
                                        <td style="width: 25%;"> Account Number </td>

                                        <td>  <input type="text" name="bankaccount_number" class="form-control" value="<%- data[0].bankaccount_number %>" /> </td>

                                    </tr>
                                    <tr>
                                        <td style="width: 25%;"> IFSC code </td>

                                        <td>  <input type="text" class="form-control" name="bank_ifsccode" value="<%- data[0].bank_ifsccode %>" /> </td>

                                    </tr>




                                </tbody>
                            </table>
                            
                            <table class="table table-bordered table-hover table-striped">
                                
                                <tbody>

                                    <tr>
                                        <td> <h4> Profile Photo </h4> </td>
                                        <td> <h4> ID Scan Copy ( PAN / Aathar  ) </h4>  </td>
                                        
                                    </tr>
                                    <tr>
                                         <td width="50%"> 
                                      
                                        
                                        <% if(typeof data[0].image_url1!="undefined" && data[0].image_url1!="" ) { %>
                                        <img src="<%- data[0].image_url1 %>" width="50%"  /> 
                                            
                                            <% } else { %>
                                                <img src="/images/kyc1.jpg" width="25%" /> 
                                            <% } %>
                                        
                                        
                                        </td>
                                        <td width="50%"> 
                                            <% if(typeof data[0].image_url2!="undefined" && data[0].image_url2!="" ) { %>
                                        <img src="<%- data[0].image_url2 %>" width="50%" /> 
                                            
                                            <% } else { %>
                                                <img src="/images/kyc1.jpg" width="25%" /> 
                                            <% } %>
                                        
                                        </td>
                                        
                                    </tr>
                                    
                                    <tr>
                                        <td> <input type="file" name="kyc1" />  </td>
                                        <td> <input type="file" name="kyc2" />  </td>
                                        
                                    </tr>
                                
                               
                                    
                                    
                                    
                                </tbody>
                            </table>

                        </div>

                    </form>

                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <% include footer %>  

</body>

</html>

<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $(document).ready(function () {
        
        $("#idproof_expirydate").datepicker({ dateFormat: 'yy-dd-mm' });
        
        
        
        $("#profile").validate({
            rules: {
                first_name: {
                    required: true,
                },
                last_name: {
                    required: true,
                },
                email: {
                    required: true,
                    email: true,
                },
                mobilenumber: {
                    required: true,
                    number: true,
                },
                country: {
                    required: true,
                },
                city: {
                    required: true,
                },
                pincode: {
                    required: true,
                    number: true,
                },
//                idproof_expirydate: {
//                    required: true,
//                },
                idproof_number: {
                    required: true,
                    maxlength:9,
                    minlength:9,
                },
//                bankaccount_holdername: {
//                    required: true,
//                },
//                bankaccount_number: {
//                    required: true,
//                },
//                bank_ifsccode: {
//                    required: true,
//                }

            },
            submitHandler: function () {

                return true;


            }
        });
    });
</script>